import os
import csv
import pandas as pd
import numpy as np
#def import_csv(csvfile):
Budget_data = os.path.join('..', 'Desktop', 'budget.csv') 
with open(Budget_data) as csvfile:
        csvreader = csv.reader(csvfile, delimiter=",")
        header = next(csvreader)
        change = 0
        month_count = 1
        prevrow = next(csvreader)
        profit = int(prevrow[1])
        delta = []
        for row in csvreader:
            month_count +=1
            profit = profit + int(row[1])
            change = change + int(row[1]) - int(prevrow[1])
            prevrow = row
            delta.append(change) 
print("Total Month:", (month_count))
print("Total Profit/Loss:$", (profit))
print(change)
print(change/month_count)
